<Window x:Class="wpf_twoforms.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_twoforms"
        mc:Ignorable="d"
        Title="Подтверждение" Background="#FF008110" Closing="Window_Closing" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterScreen" KeyUp="Window_KeyUp" SizeToContent="WidthAndHeight" >
    <StackPanel>
        <Label x:Name="label" Content="Вы уверены?" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="20" Width="132"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10" >
            <Button x:Name="button0" Content="ОК" Background="#FF00C618" BorderBrush="Black" Width="80" FontSize="13.333" Margin="10" Click="button0_Click" />
            <Button x:Name="button1" Content="Применить" Background="#FF00C618" BorderBrush="Black" Width="80" Margin="10" FontSize="13.333" Click="button1_Click" />
            <Button x:Name="button2" Content="Отмена" Background="#FF00C618" BorderBrush="Black" Width="80" Margin="10" FontSize="13.333" Click="button2_Click" />
        </StackPanel>
        
    </StackPanel>
</Window>
