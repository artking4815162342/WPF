<Window x:Class="wpf_twoforms.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_twoforms"
        mc:Ignorable="d"
        Title="TWOFORMS" Height="191" Width="400" Background="#FF008110" Visibility="Visible" Foreground="{x:Null}" BorderThickness="0" ResizeMode="NoResize"
        >

    <StackPanel Orientation="Vertical" Margin="15">

        <TextBox x:Name="textBox0" Width="Auto" Background="#FF00C618" BorderBrush="Black" VerticalAlignment="Top" GotFocus="textBox0_GotFocus"  />
        <TextBox x:Name="textBox1" Width="Auto" Background="#FF00C618" BorderBrush="Black" VerticalAlignment="Top" Margin="0,10,0,0" GotFocus="textBox1_GotFocus"  />
        <TextBox x:Name="textBox2" Width="Auto" Background="#FF00C618" BorderBrush="Black" VerticalAlignment="Top" Margin="0,10,0,0" GotFocus="textBox2_GotFocus" />

        <Label x:Name="label" Content="Изменить режим редактирования" Background="#FF00C618" Margin="0,23,0,0" HorizontalAlignment="Center" MouseLeftButtonDown="label_MouseLeftButtonDown" />

    </StackPanel>
</Window>
